# simple1calculator
print("Simple Calculator")
print("1 - Add")
print("2 - Subtract")
print("3 - Multiplication")
print("4 - Division")
option = int(input("Choose an operation:"))

if (option in [1,2,3,4]):
    num1 = int(input("Enter first number: "))
    num2 = int(input("Enter second number: "))
else:
    print("Invalid operatrion entered. Please enter a number between 1 and 4")
    
if (option == 1):
    Result = num1 + num2
elif(option == 2):
    Result = num1 - num2
elif(option == 3):
    Result = num1 * num2
elif(option == 4):
    if num2 == 0:
        print("Error: Division by zero is not allowed.")
        exit()
    Result = num1 // num2
print(f"The result of the operation is {Result}")
